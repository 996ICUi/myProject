page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  display: flex;
  height: 60rpx;
}
.search_row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 30rpx;
}
.search_row button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  margin: 0 10rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  border-bottom: 1rpx solid #ccc;
}